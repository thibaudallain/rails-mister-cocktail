<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1570813092574-b4cccfc58f9a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80);">
  <div class="row justify-content-around align-items-center" id="banner-content">
    <div class="container col-4">
      <h1>Un petit godet ?</h1>
      <%= link_to "Tu veux voir ma recette?", new_cocktail_path ,class: "btn btn-light"  %>
    </div>
    <div class="col-4 p-5">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1558979158-65a1eaa08691?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1558979158-65a1eaa08691?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1558979158-65a1eaa08691?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  </div>
</div>

<div class="under-banner">
  <div class="cards px-5">
  <% @cocktails.each do |cocktail| %>
    <div class="card shadow-sm" data-aos="fade-up" style="width: 25 * $;">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card bg-dark text-white">
          <%= cl_image_tag cocktail.photo.key, height: 200, crop: :fill, class: "card-img-top coveredimg" %>
          <div class="card-img-overlay">
            <h1 class="card-title"><%= cocktail.name %></h1>
          </div>
        </div>
      <% end %>
      <div class="card-body">
        <p class="card-text">
          <% cocktail.ingredients.each do |ingredient| %>
            <ul class="list-group list-group-flush">
              <% ingredient.doses.each do |dose| %>
                <li class="list-group-item"><%= ingredient.name %> : <%= dose.description %></li>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
  </div>
</div>



