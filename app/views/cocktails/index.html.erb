<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail.name, cocktail_path(cocktail) %>
  <% cocktail.ingredients.each do |ingredient| %>
    <%= ingredient.name %>
    <% ingredient.doses.each do |dose| %>
      <%= dose.description %>
    <% end %>
  <% end %>
<% end %>

<br>

<%= link_to "Create", new_cocktail_path, class: "btn btn-primary" %>
